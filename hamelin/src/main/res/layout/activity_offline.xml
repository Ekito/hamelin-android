<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="fr.ekito.hamelin.OfflineActivity"
    android:textAlignment="center"
    android:orientation="vertical">

    <TextView
        android:layout_weight="2"
        android:textAppearance=
            "?android:textAppearanceLarge"
        android:text="@string/app_name"
        android:textSize="40dp"
        android:textColor="#33B5E5"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_weight="1"
        android:textAppearance=
            "?android:textAppearanceLarge"
        android:text="Une expérience musicale collective temps réel ..."
        android:textColor="#33B5E5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <ImageView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView"
        android:src="@drawable/wifi_symbol"
        android:layout_margin="20dp" />

    <TextView
        android:textAppearance=
            "?android:textAppearanceMedium"
        android:text="@string/offline_text"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button style="?android:buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/offline_ok_button"
        android:text="@string/offline_button"
        android:textColor="#33B5E5"
        android:onClick="onclick_back"
        android:layout_weight="1"/>


</LinearLayout>
